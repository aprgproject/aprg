    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run In WSL",
            "type": "node",
            "request": "launch",
            "program": "${fileBasename}",
            "args": [],
            "cwd": "${workspaceFolder}/${relativeFileDirname}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeExecutable": "wsl",
            "runtimeArgs": [
                "bash"
            ],
            "env": {},
            "stopOnEntry": true,
            "outFiles": [],
            "sourceMaps": false,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        }
    ]
}