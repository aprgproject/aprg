		{
			"label": "Build In WSL",
			"type": "shell",
			"command": "wsl",
			"args": [
				"./.vscode/runWslCommonScript.sh",
				"outputWithAbsolutePaths",
				"build",
				"Debug",
				"WslBuild"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "cpp",
