		{
			"label": "Run In WSL",
			"type": "shell",
			"command": "wsl",
			"args": [
				"./.vscode/runWslCommonScript.sh",
				"outputWithHighlighting",
				"run",
				"Debug",
				"WslBuild",
				"" //"--gtest_filter=*.*"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "test",
			"problemMatcher": [],
			"dependsOn": "Install In WSL"
		},
		{
			"label": "Clean In WSL",
			"type": "shell",
			"command": "wsl",
			"args": [
				"./.vscode/runWslCommonScript.sh",
				"outputWithAbsolutePaths",
				"clean",
				"Debug",
				"WslBuild",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Configure locally with cmake and MSVC",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--preset=visualstudio-windows-msvc-debug"
			],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Build locally with MSVC",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"--preset=default"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": "$msCompile",
			"dependsOn": "Configure locally with cmake and MSVC"
		},
		{
			"label": "Install locally the MSVC build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--install",
				"../VisualStudioBuild",
				"--config Debug"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": "$msCompile",
			"dependsOn": "Build locally with MSVC"
		},
		{
			"label": "Run the local MSVC target",
			"type": "shell",
			"command": "${workspaceFolder}/../VisualStudioBuild/install/bin/${workspaceFolderBasename}.exe",
			"args": [
				"" //"--gtest_filter=*.*"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [],
			"dependsOn": "Install locally the MSVC build"
		}
	]
}